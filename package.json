{
    "name": "workspace-chronicle",
    "displayName": "Workspace Chronicle",
    "description": "List & search .code-workspace files, open in new window by default, and keep searchable history.",
    "publisher": "qadiffllc",
    "license": "Apache-2.0",
    "repository": "https://github.com/qadiff/workspace-chronicle",
    "version": "0.0.1",
    "type": "commonjs",
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onCommand:workspaceChronicle.refresh",
        "onCommand:workspaceChronicle.open",
        "onCommand:workspaceChronicle.setOpenMode",
        "onCommand:workspaceChronicle.setLabel",
        "onCommand:workspaceChronicle.setColor",
        "onCommand:workspaceChronicle.filterHistory",
        "onCommand:workspaceChronicle.toggleSort",
        "onCommand:workspaceChronicle.copyFullPath",
        "onCommand:workspaceChronicle.filterByTag",
        "onCommand:workspaceChronicle.quickOpenRecent",
        "onCommand:workspaceChronicle.quickOpenWorkspaces",
        "onCommand:workspaceChronicle.clearAllFilters"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "workspaceChronicle.refresh",
                "title": "Workspace Chronicle: Refresh"
            },
            {
                "command": "workspaceChronicle.setOpenMode",
                "title": "Workspace Chronicle: Set Default Open Mode"
            },
            {
                "command": "workspaceChronicle.setLabel",
                "title": "Workspace Chronicle: Set Custom Name"
            },
            {
                "command": "workspaceChronicle.setColor",
                "title": "Workspace Chronicle: Set Color"
            },
            {
                "command": "workspaceChronicle.filterHistory",
                "title": "Workspace Chronicle: Filter History"
            },
            {
                "command": "workspaceChronicle.toggleSort",
                "title": "Workspace Chronicle: Toggle Sort Mode"
            },
            {
                "command": "workspaceChronicle.copyFullPath",
                "title": "Copy Full Path"
            },
            {
                "command": "workspaceChronicle.filterByTag",
                "title": "Workspace Chronicle: Filter by Label or Color"
            },
            {
                "command": "workspaceChronicle.quickOpenRecent",
                "title": "Workspace Chronicle: Open Recent"
            },
            {
                "command": "workspaceChronicle.quickOpenWorkspaces",
                "title": "Workspace Chronicle: Search Workspaces"
            },
            {
                "command": "workspaceChronicle.clearAllFilters",
                "title": "Clear All Filters"
            }
        ],
        "configuration": {
            "type": "object",
            "scope": "resource",
            "title": "Workspace Chronicle Settings",
            "properties": {
                "workspaceChronicle.roots": {
                    "type": "array",
                    "default": [
                        "${userHome}"
                    ],
                    "description": ".code-workspace を探索するルートディレクトリの配列"
                },
                "workspaceChronicle.defaultOpenMode": {
                    "type": "string",
                    "enum": [
                        "newWindow",
                        "reuseWindow"
                    ],
                    "default": "newWindow",
                    "description": "ワークスペースを開く既定動作（新規ウィンドウ / 既存ウィンドウ）"
                },
                "workspaceChronicle.historyLimit": {
                    "type": "number",
                    "default": 500,
                    "description": "保存する履歴の最大件数"
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "workspaceChronicle.workspaces",
                    "name": "Workspaces"
                },
                {
                    "id": "workspaceChronicle.history",
                    "name": "Workspace History"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "workspaceChronicle.clearAllFilters",
                    "when": "view == workspaceChronicle.workspaces || view == workspaceChronicle.history",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "workspaceChronicle.setLabel",
                    "when": "view == workspaceChronicle.workspaces && viewItem == workspaceItem",
                    "group": "edit@1"
                },
                {
                    "command": "workspaceChronicle.setColor",
                    "when": "view == workspaceChronicle.workspaces && viewItem == workspaceItem",
                    "group": "edit@2"
                },
                {
                    "command": "workspaceChronicle.copyFullPath",
                    "when": "view == workspaceChronicle.workspaces && viewItem == workspaceItem",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "compile": "tsc -p .",
        "watch": "tsc -w",
        "dev": "pnpm compile && echo 'Run F5 to launch Extension Host'",
        "lint": "eslint .",
        "test": "pnpm compile && node ./out/test/runTest.js",
        "test:linux": "pnpm compile && xvfb-run -a node ./out/test/runTest.js",
        "package": "vsce package",
        "prepare": "husky",
        "vscode:prepublish": "pnpm compile"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/glob": "^9.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.7.4",
        "@types/vscode": "^1.95.0",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.7.0",
        "eslint": "^9.12.0",
        "glob": "^11.0.3",
        "husky": "^9.1.7",
        "mocha": "^11.7.5",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.46.3"
    },
    "pnpm": {
        "packageManager": "pnpm@9.12.0",
        "onlyBuiltDependencies": [
            "@vscode/vsce-sign",
            "keytar"
        ]
    }
}
